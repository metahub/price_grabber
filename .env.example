# Database Configuration
DB_HOST=localhost
DB_PORT=3306
DB_NAME=price_grabber
DB_USER=root
DB_PASSWORD=

# Application Configuration
APP_ENV=development
APP_DEBUG=true
APP_TIMEZONE=UTC

# Scraper Configuration
SCRAPER_USER_AGENT="Mozilla/5.0 (Windows NT 10.0; Win64; x64) AppleWebKit/537.36"
SCRAPER_TIMEOUT=30
SCRAPER_MAX_RETRIES=3
SCRAPER_DELAY=1
SCRAPER_202_DELAY=30
SCRAPER_429_DELAY=5
SCRAPER_MIN_INTERVAL=3600

# Chrome Headless Browser (for bypassing WAF/bot detection)
CHROME_ENABLED=true
CHROME_BINARY_PATH="/usr/bin/chromium-browser"
CHROME_TIMEOUT=60
CHROME_DISABLE_IMAGES=true

# Email Notifications (optional)
ENABLE_NOTIFICATIONS=false
NOTIFICATION_EMAIL=
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
