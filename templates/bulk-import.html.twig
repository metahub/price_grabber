{% extends "layout.html.twig" %}

{% block title %}Bulk Import - Price Grabber{% endblock %}

{% block content %}
<div class="space-y-6">
    {# Results Alert #}
    {% if results %}
        <div class="alert {{ results.failed > 0 ? 'alert-error' : 'alert-success' }}">
            <div class="font-semibold mb-2">Import Results:</div>
            <div class="space-y-1 text-sm">
                <div>Successfully imported: {{ results.success }}</div>
                <div>Updated: {{ results.updated }}</div>
                <div>Failed: {{ results.failed }}</div>
            </div>

            {% if results.errors is not empty %}
                <div class="mt-3">
                    <div class="font-semibold mb-1">Errors:</div>
                    <ul class="list-disc ml-5 space-y-1 text-sm">
                        {% for error in results.errors %}
                            <li>{{ error }}</li>
                        {% endfor %}
                    </ul>
                </div>
            {% endif %}
        </div>
    {% endif %}

    {# Import Form Card #}
    <div class="card p-6">
        <h2 class="text-2xl font-semibold mb-4">Bulk Import Products</h2>

        {# Info Box #}
        <div class="alert alert-info mb-6">
            <div class="space-y-2 text-sm">
                <div>
                    <span class="font-semibold">Format:</span> Paste tab-separated data (e.g., from Excel/Google Sheets)
                </div>
                <div>
                    <span class="font-semibold">Columns (tab-separated):</span>
                    <ol class="list-decimal ml-5 mt-1 space-y-1 text-xs">
                        <li>product_id (required)</li>
                        <li>parent_id (optional)</li>
                        <li>sku (optional)</li>
                        <li>ean (optional)</li>
                        <li>site (optional)</li>
                        <li>site_product_id (optional)</li>
                        <li>price (optional)</li>
                        <li>uvp (optional)</li>
                        <li>site_status (optional)</li>
                        <li>url (required)</li>
                        <li>name (optional)</li>
                        <li>description (optional)</li>
                    </ol>
                </div>
                <div class="mt-3">
                    <div class="font-semibold mb-1">Example:</div>
                    <div class="bg-muted p-2 rounded font-mono text-xs overflow-x-auto">
                        <div class="whitespace-nowrap">PROD001		SKU123	1234567890123	amazon	B08X123	29.99	39.99	active	https://example.com/product	Example Product	Product description</div>
                        <div class="whitespace-nowrap">PROD002	PROD001	SKU124	1234567890124	amazon	B08X124	19.99	29.99	active	https://example.com/product-variant	Example Product - Small	Size Small variant</div>
                    </div>
                </div>
            </div>
        </div>

        {# Form #}
        <form method="POST">
            <div class="space-y-4">
                <div>
                    <label for="bulk_data" class="block text-sm font-medium mb-2">
                        Paste your data here:
                    </label>
                    <textarea
                        name="bulk_data"
                        id="bulk_data"
                        rows="15"
                        class="textarea font-mono text-sm"
                        placeholder="{{ template }}"
                    ></textarea>
                </div>

                <div class="flex gap-3">
                    <button type="submit" class="btn btn-primary">
                        Import Products
                    </button>
                    <a href="products.php" class="btn btn-outline">
                        View Products
                    </a>
                </div>
            </div>
        </form>
    </div>

    {# Tips Card #}
    <div class="card p-6">
        <h3 class="text-lg font-semibold mb-3">Tips:</h3>
        <ul class="space-y-2 text-sm text-muted-foreground list-disc ml-5">
            <li>You can copy data directly from Excel or Google Sheets - the tabs will be preserved</li>
            <li>Each row should represent one product</li>
            <li>For child products (variants), specify the Parent ID to link them to their parent product</li>
            <li>URLs must be complete (including http:// or https://)</li>
            <li>Empty columns can be left blank (just use multiple tabs)</li>
        </ul>
    </div>
</div>
{% endblock %}
