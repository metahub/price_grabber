{% extends "layout.html.twig" %}

{% block title %}Scraper Configuration - Price Grabber{% endblock %}

{% block content %}
<div class="space-y-6">
    {# Message Alert #}
    {% if message %}
        <div class="alert alert-{{ message.type }}">
            {{ message.text }}
        </div>
    {% endif %}

    {# Add Configuration Form #}
    <div class="card p-6">
        <h2 class="text-2xl font-semibold mb-4">Add New Configuration</h2>

        <div class="alert alert-info mb-6">
            <div class="text-sm space-y-1">
                <div><strong>Selector Types:</strong></div>
                <div><strong>CSS:</strong> Standard CSS selectors (e.g., <code class="bg-muted px-2 py-1 rounded">.price</code>, <code class="bg-muted px-2 py-1 rounded">#product-title</code>)</div>
                <div><strong>XPath:</strong> XPath expressions (e.g., <code class="bg-muted px-2 py-1 rounded">//span[@class="price"]</code>)</div>
            </div>
        </div>

        <form method="POST" class="space-y-4">
            <input type="hidden" name="action" value="add">

            <div>
                <label class="block text-sm font-medium mb-2">Hostname (e.g., example.com) *</label>
                <input type="text" name="hostname" required class="input">
            </div>

            <div>
                <label class="block text-sm font-medium mb-2">Price Selector *</label>
                <input type="text" name="price_selector" required class="input">
            </div>

            <div>
                <label class="block text-sm font-medium mb-2">Seller Selector</label>
                <input type="text" name="seller_selector" class="input">
            </div>

            <div>
                <label class="block text-sm font-medium mb-2">Availability Selector</label>
                <input type="text" name="availability_selector" class="input">
            </div>

            <div>
                <label class="block text-sm font-medium mb-2">Product Name Selector</label>
                <input type="text" name="name_selector" class="input">
            </div>

            <div>
                <label class="block text-sm font-medium mb-2">Image Selector</label>
                <input type="text" name="image_selector" class="input">
            </div>

            <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
                <div>
                    <label class="block text-sm font-medium mb-2">Currency</label>
                    <input type="text" name="currency" value="USD" maxlength="3" class="input">
                </div>

                <div>
                    <label class="block text-sm font-medium mb-2">Selector Type</label>
                    <select name="selector_type" class="select">
                        <option value="css">CSS</option>
                        <option value="xpath">XPath</option>
                    </select>
                </div>

                <div>
                    <label class="block text-sm font-medium mb-2">Active</label>
                    <select name="active" class="select">
                        <option value="1">Yes</option>
                        <option value="0">No</option>
                    </select>
                </div>
            </div>

            <div>
                <label class="block text-sm font-medium mb-2">Notes</label>
                <textarea name="notes" rows="3" class="textarea font-mono text-sm"></textarea>
            </div>

            <button type="submit" class="btn btn-primary">
                Add Configuration
            </button>
        </form>
    </div>

    {# Existing Configurations #}
    <div class="card p-6">
        <h2 class="text-2xl font-semibold mb-4">Existing Configurations</h2>

        {% if configs is empty %}
            <div class="text-center py-8 text-muted-foreground">
                <p>No configurations found.</p>
            </div>
        {% else %}
            <div class="overflow-x-auto">
                <table class="w-full">
                    <thead>
                        <tr class="border-b">
                            <th class="text-left py-3 px-4 font-semibold text-sm text-muted-foreground">ID</th>
                            <th class="text-left py-3 px-4 font-semibold text-sm text-muted-foreground">Hostname</th>
                            <th class="text-left py-3 px-4 font-semibold text-sm text-muted-foreground">Selectors</th>
                            <th class="text-left py-3 px-4 font-semibold text-sm text-muted-foreground">Type</th>
                            <th class="text-left py-3 px-4 font-semibold text-sm text-muted-foreground">Status</th>
                            <th class="text-left py-3 px-4 font-semibold text-sm text-muted-foreground">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for config in configs %}
                            <tr class="border-b hover:bg-muted/50 transition-colors">
                                <td class="py-3 px-4 text-sm">{{ config.id }}</td>
                                <td class="py-3 px-4 font-semibold">{{ config.hostname }}</td>
                                <td class="py-3 px-4 text-xs">
                                    <div>Price: <code class="bg-muted px-1 rounded">{{ config.price_selector|slice(0, 30) }}</code></div>
                                    {% if config.seller_selector %}
                                        <div>Seller: <code class="bg-muted px-1 rounded">{{ config.seller_selector|slice(0, 30) }}</code></div>
                                    {% endif %}
                                </td>
                                <td class="py-3 px-4 text-sm uppercase">{{ config.selector_type }}</td>
                                <td class="py-3 px-4">
                                    {% if config.active %}
                                        <span class="badge badge-success">Active</span>
                                    {% else %}
                                        <span class="badge badge-danger">Inactive</span>
                                    {% endif %}
                                </td>
                                <td class="py-3 px-4">
                                    <form method="POST" class="inline" onsubmit="return confirm('Are you sure you want to delete this configuration?')">
                                        <input type="hidden" name="action" value="delete">
                                        <input type="hidden" name="id" value="{{ config.id }}">
                                        <button type="submit" class="btn btn-destructive text-sm py-1 px-3">
                                            Delete
                                        </button>
                                    </form>
                                </td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        {% endif %}
    </div>
</div>
{% endblock %}
