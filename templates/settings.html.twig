{% extends "layout.html.twig" %}

{% block title %}Settings - Price Grabber{% endblock %}

{% block content %}
<div class="space-y-6">
    <div class="card p-6">
        <div class="flex items-center justify-between mb-6">
            <h2 class="text-2xl font-semibold">Application Settings</h2>
        </div>

        {% if message %}
            <div class="mb-6 p-4 rounded-md {% if message_type == 'success' %}bg-green-50 text-green-800 border border-green-200{% else %}bg-red-50 text-red-800 border border-red-200{% endif %}">
                {{ message }}
            </div>
        {% endif %}

        <form method="POST" class="space-y-8">
            <input type="hidden" name="action" value="update" />

            {% for category, settings in settings_by_category %}
                <div class="border-b pb-6 last:border-b-0">
                    <h3 class="text-lg font-semibold mb-4 capitalize">{{ category }} Configuration</h3>

                    <div class="space-y-4">
                        {% for setting in settings %}
                            <div class="grid grid-cols-1 md:grid-cols-3 gap-4 items-start">
                                <div>
                                    <label for="setting_{{ setting.key }}" class="block text-sm font-medium mb-1">
                                        {{ setting.key|replace({'_': ' '})|title }}
                                    </label>
                                    {% if setting.description %}
                                        <p class="text-xs text-muted-foreground">{{ setting.description }}</p>
                                    {% endif %}
                                </div>

                                <div class="md:col-span-2">
                                    {% if setting.type == 'boolean' %}
                                        <select
                                            name="setting_{{ setting.key }}"
                                            id="setting_{{ setting.key }}"
                                            class="select w-full"
                                        >
                                            <option value="true" {% if setting.value in ['true', '1', 'yes', 'on'] %}selected{% endif %}>Enabled</option>
                                            <option value="false" {% if setting.value not in ['true', '1', 'yes', 'on'] %}selected{% endif %}>Disabled</option>
                                        </select>
                                    {% elseif setting.type == 'integer' %}
                                        <input
                                            type="number"
                                            name="setting_{{ setting.key }}"
                                            id="setting_{{ setting.key }}"
                                            value="{{ setting.value }}"
                                            class="input w-full"
                                        />
                                    {% else %}
                                        <input
                                            type="text"
                                            name="setting_{{ setting.key }}"
                                            id="setting_{{ setting.key }}"
                                            value="{{ setting.value }}"
                                            class="input w-full"
                                        />
                                    {% endif %}
                                </div>
                            </div>
                        {% endfor %}
                    </div>
                </div>
            {% endfor %}

            <div class="flex justify-end gap-3 pt-4">
                <a href="index.php" class="btn btn-outline">
                    Cancel
                </a>
                <button type="submit" class="btn btn-primary">
                    Save Settings
                </button>
            </div>
        </form>
    </div>
</div>
{% endblock %}
