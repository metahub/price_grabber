{% extends "layout.html.twig" %}

{% block title %}User Management - Price Grabber{% endblock %}

{% block content %}
<div class="space-y-6">
    {# Results Alert #}
    {% if error %}
        <div class="alert alert-error">
            {{ error }}
        </div>
    {% endif %}

    {% if success %}
        <div class="alert alert-success">
            {{ success }}
        </div>
    {% endif %}

    {# Create User Card #}
    <div class="card p-6">
        <h2 class="text-2xl font-semibold mb-4">Create New User</h2>

        <form method="POST" class="space-y-4">
            <input type="hidden" name="action" value="create" />

            <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
                <div>
                    <label for="email" class="block text-sm font-medium mb-2">
                        Email <span class="text-red-500">*</span>
                    </label>
                    <input
                        type="email"
                        name="email"
                        id="email"
                        class="input"
                        placeholder="user@example.com"
                        required
                    />
                </div>

                <div>
                    <label for="password" class="block text-sm font-medium mb-2">
                        Password <span class="text-red-500">*</span>
                    </label>
                    <input
                        type="password"
                        name="password"
                        id="password"
                        class="input"
                        placeholder="Min. 8 characters"
                        required
                        minlength="8"
                    />
                </div>

                <div>
                    <label for="username" class="block text-sm font-medium mb-2">
                        Username (optional)
                    </label>
                    <input
                        type="text"
                        name="username"
                        id="username"
                        class="input"
                        placeholder="Optional display name"
                    />
                </div>
            </div>

            <div>
                <button type="submit" class="btn btn-primary">
                    Create User
                </button>
            </div>
        </form>
    </div>

    {# Users List Card #}
    <div class="card p-6">
        <h2 class="text-2xl font-semibold mb-6">All Users</h2>

        {% if users is empty %}
            <div class="text-center py-12">
                <p class="text-muted-foreground">
                    No users found.
                </p>
            </div>
        {% else %}
            <div class="overflow-x-auto">
                <table class="w-full">
                    <thead>
                        <tr class="border-b">
                            <th class="text-left py-3 px-4 font-semibold text-sm text-muted-foreground">ID</th>
                            <th class="text-left py-3 px-4 font-semibold text-sm text-muted-foreground">Email</th>
                            <th class="text-left py-3 px-4 font-semibold text-sm text-muted-foreground">Username</th>
                            <th class="text-left py-3 px-4 font-semibold text-sm text-muted-foreground">Status</th>
                            <th class="text-left py-3 px-4 font-semibold text-sm text-muted-foreground">Registered</th>
                            <th class="text-left py-3 px-4 font-semibold text-sm text-muted-foreground">Last Login</th>
                            <th class="text-left py-3 px-4 font-semibold text-sm text-muted-foreground">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for user in users %}
                            <tr class="border-b hover:bg-muted/50 transition-colors">
                                <td class="py-3 px-4 text-sm">{{ user.id }}</td>
                                <td class="py-3 px-4">
                                    <div class="font-medium">{{ user.email }}</div>
                                </td>
                                <td class="py-3 px-4 text-sm">
                                    {{ user.username|default('-') }}
                                </td>
                                <td class="py-3 px-4">
                                    {% if user.verified %}
                                        <span class="badge badge-success">Verified</span>
                                    {% else %}
                                        <span class="badge badge-warning">Not Verified</span>
                                    {% endif %}
                                </td>
                                <td class="py-3 px-4 text-sm">
                                    {{ user.registered|date('Y-m-d H:i') }}
                                </td>
                                <td class="py-3 px-4 text-sm">
                                    {% if user.last_login %}
                                        {{ user.last_login|date('Y-m-d H:i') }}
                                    {% else %}
                                        <span class="text-muted-foreground">Never</span>
                                    {% endif %}
                                </td>
                                <td class="py-3 px-4">
                                    <form method="POST" class="inline" onsubmit="return confirm('Are you sure you want to delete this user?');">
                                        <input type="hidden" name="action" value="delete" />
                                        <input type="hidden" name="user_id" value="{{ user.id }}" />
                                        <button type="submit" class="text-sm text-red-600 hover:underline">
                                            Delete
                                        </button>
                                    </form>
                                </td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>

            <div class="mt-4 text-sm text-muted-foreground">
                Showing {{ users|length }} user(s)
            </div>
        {% endif %}
    </div>
</div>
{% endblock %}
